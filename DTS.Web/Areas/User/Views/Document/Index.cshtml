@model DocumentVm;
@{
    ViewData["Title"] = "Documents";
 
}
<div class="card">
    <h5 class="card-title" id="tableTitle">@ViewData["card-title"]</h5>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <table class="selectionTable table table-striped table-bordered" style="width:100%" id="dataTable">
                    <thead>
                    <tr class="bg-dark text-white ps-2">
                    <th class="ps-3">Id</th>
                    <th class="ps-3">TrackingCode</th>
                    <th class="ps-3">Title</th>
                    <th class="ps-3">Content</th>
                    <th class="ps-3">Action</th>
                    </thead>
                </table>
            </div>
        </div>
        <div class="custom-buttons">
            <button class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" >
                <i class="bi bi-file-earmark-plus"></i>
                New Document
            </button>
            <button class="btn btn-success">
                <i class="bi bi-arrow-repeat"></i>
                Refresh
            </button>
        </div>
    </div>
</div>

<!-- Modal for new documents -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" >
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Document</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <form>
              <div class="form-group">
                  <label for="message-text" class="col-form-label">Tracking Code:</label>
                   <strong id = 'treackingCode'></strong>
              </div>
              <div class="form-group">
                  <label for="message-text" class="col-form-label">Department:</label>
                  <select id="departmentId" asp-for="@Model.DepartmentId" asp-items="@Model.Departments" class="form-select" style="font-size: 12px !important;">
                      <option value="">----Select Department----</option>
                  </select>
              </div>
              <div class="form-group">
                  <label for="recipient-name" class="col-form-label">Title:</label>
                  <input type="text" class="form-control" id="title">
              </div>
              <div class="form-group">
                  <label for="message-text" class="col-form-label">Content:</label>
                  <textarea cols="30" rows="2" class="form-control" style="height: 50px;" id = "content"></textarea>
              </div>
              <div class="form-group">
                  <label for="message-text" class="col-form-label">Request Type:</label>
                  <select asp-for="@Model.RequestTypeId" asp-items="@Model.RequestTypes" class="form-select" style="font-size: 12px !important;" id="requestTypeId">
                      <option value="">----Select Request Type----</option>
                  </select>
              </div>
              <div class="form-group">
                  <label for="message-text" class="col-form-label">Remarks:</label>
                  <textarea cols="30" rows="2" class="form-control" style="height: 50px;" id ="remarks"></textarea>
              </div>
          </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id = 'btnSaveChangesDocument'>Save Changes</button>
      </div>
    </div>
  </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        loadDataTable(documentColumns)
        let trackingCode = generateTrackingCode();
        $('#trackingCode').text(trackingCode)
        
        $(document).ready(function() {                      
           $('#btnSaveChangesDocument').click('click', function (e){                   
                let departmentId = parseInt($('#departmentId').val());
                 let requestTypeId = parseInt($('#requestTypeId').val());
                 let title =  $('#title').val();
                 let content =  $('#content').val();
                 let remarks =  $('#remarks').val();
                  
                 $.ajax({
                    url: '/user/document/createDocument',
                    type: 'POST',
                    dataType: 'json', // Change dataType as needed
                    data: {
                        departmentId,
                        requestTypeId,
                        title,
                        content,
                        remarks,
                        trackingCode
                    },
                    success: function(response) {
                       function pushNotify() {
                         new Notify({
                           status: 'success',
                           title: 'Notify Title',
                           text: 'Notify text lorem ipsum',
                           effect: 'fade',
                           speed: 300,
                           customClass: null,
                           customIcon: null,
                           showIcon: true,
                           showCloseButton: true,
                           autoclose: true,
                           autotimeout: 3000,
                           gap: 20,
                           distance: 20,
                           type: 'outline',
                           position: 'right top'
                         })
                       }
                       
                       pushNotify();
                    },
                    error: function(xhr, status, error) {
                        function pushNotify() {
                          new Notify({
                            status: 'success',
                            title: 'Notify Title',
                            text: 'Notify text lorem ipsum',
                            effect: 'fade',
                            speed: 150,
                            customClass: null,
                            customIcon: null,
                            showIcon: true,
                            showCloseButton: true,
                            autoclose: true,
                            autotimeout: 3000,
                            gap: 20,
                            distance: 20,
                            type: 'outline',
                            position: 'right top'
                          })
                        }
                        
                         pushNotify();
                    }
                });
            });
           
          
           
           
        });
         
        $('.custom-buttons').appendTo('.dataTables_wrapper .dataTables_filter:eq(0)');
             
    </script>
}
